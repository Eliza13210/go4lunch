<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- MainActivity -->
    <style name="MainTheme" parent="AppTheme.NoTitle">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/main_background</item>
    </style>
    <!-- ProfileActivity -->
    <style name="ProfileTheme" parent="AppTheme.NoTitle">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkOrange</item>
    </style>
    <!-- RestaurantActivity -->
    <style name="RestaurantTheme" parent="AppTheme.NoTitle">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:icon">@color/orange</item>
    </style>
    <!-- User List -->
    <style name="cursive">
        <item name="android:textStyle">italic</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="AppTheme.NoTitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoTitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
